<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.voting</groupId>
        <artifactId>voting-cqrs</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <groupId>io.voting.common</groupId>
    <artifactId>library</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <properties>
        <spring-boot.repackage.skip>true</spring-boot.repackage.skip>
        <schema.registry.url>http://localhost:8081</schema.registry.url>
    </properties>

    <pluginRepositories>
        <pluginRepository>
            <id>confluent</id>
            <url>https://packages.confluent.io/maven/</url>
        </pluginRepository>
    </pluginRepositories>

    <dependencies>
        <dependency>
            <groupId>org.springframework.kafka</groupId>
            <artifactId>spring-kafka</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.kafka</groupId>
            <artifactId>kafka-clients</artifactId>
        </dependency>
        <dependency>
            <groupId>io.cloudevents</groupId>
            <artifactId>cloudevents-core</artifactId>
        </dependency>
        <dependency>
            <groupId>io.cloudevents</groupId>
            <artifactId>cloudevents-json-jackson</artifactId>
        </dependency>
        <dependency>
            <groupId>io.cloudevents</groupId>
            <artifactId>cloudevents-kafka</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-mongodb</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.avro</groupId>
            <artifactId>avro</artifactId>
        </dependency>
        <dependency>
            <groupId>io.confluent</groupId>
            <artifactId>kafka-avro-serializer</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.avro</groupId>
                <artifactId>avro-maven-plugin</artifactId>
                <version>${avro.version}</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>schema</goal>
                        </goals>
                        <configuration>
                            <sourceDirectory>${project.basedir}/src/main/avro</sourceDirectory>
                            <imports>
                                <import>${project.basedir}/src/main/avro/enums/ElectionCategory.avsc</import>
                                <import>${project.basedir}/src/main/avro/enums/ElectionStatus.avsc</import>
                                <import>${project.basedir}/src/main/avro/cmd/CreateElection.avsc</import>
                                <import>${project.basedir}/src/main/avro/cmd/ViewElection.avsc</import>
                                <import>${project.basedir}/src/main/avro/cmd/RegisterVote.avsc</import>
                                <import>${project.basedir}/src/main/avro/cmd/CmdEvent.avsc</import>
                                <import>${project.basedir}/src/main/avro/integrity/NewElection.avsc</import>
                                <import>${project.basedir}/src/main/avro/integrity/NewVote.avsc</import>
                                <import>${project.basedir}/src/main/avro/integrity/CloseElection.avsc</import>
                                <import>${project.basedir}/src/main/avro/integrity/IntegrityEvent.avsc</import>
                            </imports>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>io.confluent</groupId>
                <artifactId>kafka-schema-registry-maven-plugin</artifactId>
                <version>${confluent.version}</version>
                <configuration>
                    <schemaRegistryUrls>${schema.registry.url}</schemaRegistryUrls>
                    <subjects>
                        <election-category>${project.basedir}/src/main/avro/enums/ElectionCategory.avsc</election-category>
                        <create-election-cmd>${project.basedir}/src/main/avro/cmd/CreateElection.avsc</create-election-cmd>
                        <view-election-cmd>${project.basedir}/src/main/avro/cmd/ViewElection.avsc</view-election-cmd>
                        <register-vote-cmd>${project.basedir}/src/main/avro/cmd/RegisterVote.avsc</register-vote-cmd>
                        <election.commands-value>${project.basedir}/src/main/avro/cmd/CmdEvent.avsc</election.commands-value>
                        <election-status>${project.basedir}/src/main/avro/enums/ElectionStatus.avsc</election-status>
                        <new-election-integrity>${project.basedir}/src/main/avro/integrity/NewElection.avsc</new-election-integrity>
                        <new-vote-integrity>${project.basedir}/src/main/avro/integrity/NewVote.avsc</new-vote-integrity>
                        <close-election-integrity>${project.basedir}/src/main/avro/integrity/CloseElection.avsc</close-election-integrity>
                        <election.events-value>${project.basedir}/src/main/avro/integrity/IntegrityEvent.avsc</election.events-value>
                    </subjects>
                    <references>
                        <create-election-cmd>
                            <reference>
                                <name>io.voting.events.enums.ElectionCategory</name>
                                <subject>election-category</subject>
                            </reference>
                        </create-election-cmd>
                        <election.commands-value>
                            <reference>
                                <name>io.voting.events.cmd.ElectionCreate</name>
                                <subject>create-election-cmd</subject>
                            </reference>
                            <reference>
                                <name>io.voting.events.cmd.ViewElection</name>
                                <subject>view-election-cmd</subject>
                            </reference>
                            <reference>
                                <name>io.voting.events.cmd.RegisterVote</name>
                                <subject>register-vote-cmd</subject>
                            </reference>
                        </election.commands-value>

                        <new-election-integrity>
                            <reference>
                                <name>io.voting.events.enums.ElectionCategory</name>
                                <subject>election-category</subject>
                            </reference>
                            <reference>
                                <name>io.voting.events.enums.ElectionStatus</name>
                                <subject>election-status</subject>
                            </reference>
                        </new-election-integrity>
                        <election.events-value>
                            <reference>
                                <name>io.voting.events.integrity.NewElection</name>
                                <subject>new-election-integrity</subject>
                            </reference>
                            <reference>
                                <name>io.voting.events.integrity.NewVote</name>
                                <subject>new-vote-integrity</subject>
                            </reference>
                            <reference>
                                <name>io.voting.events.integrity.CloseElection</name>
                                <subject>close-election-integrity</subject>
                            </reference>
                        </election.events-value>
                    </references>
                    <schemaTypes>
                        <election-category>AVRO</election-category>
                        <create-election-cmd>AVRO</create-election-cmd>
                        <view-election-cmd>AVRO</view-election-cmd>
                        <register-vote-cmd>AVRO</register-vote-cmd>
                        <election.commands-value>AVRO</election.commands-value>
                        <election-status>AVRO</election-status>
                        <new-election-integrity>AVRO</new-election-integrity>
                        <new-vote-integrity>AVRO</new-vote-integrity>
                        <close-election-integrity>AVRO</close-election-integrity>
                        <election.events-value>AVRO</election.events-value>
                    </schemaTypes>
                    <compatibilityLevels>
                        <election-category>BACKWARD</election-category>
                        <create-election-cmd>BACKWARD</create-election-cmd>
                        <view-election-cmd>BACKWARD</view-election-cmd>
                        <register-vote-cmd>BACKWARD</register-vote-cmd>
                        <election.commands-value>BACKWARD</election.commands-value>
                        <election-status>BACKWARD</election-status>
                        <new-election-integrity>BACKWARD</new-election-integrity>
                        <new-vote-integrity>BACKWARD</new-vote-integrity>
                        <close-election-integrity>BACKWARD</close-election-integrity>
                        <election.events-value>BACKWARD</election.events-value>
                    </compatibilityLevels>
                    <messagePath/>
                    <outputDirectory/>
                    <outputPath/>
                    <previousSchemaPaths/>
                    <schemas/>
<!--                    <userInfoConfig>${schema.registry.basic.auth.user.info}</userInfoConfig>-->
                    <configs>
<!--                        <schema.registry.ssl.truststore.location>/Users/ndedovic/PycharmProjects/homelab/workspace/kafka/auth/nermin/truststore.jks</schema.registry.ssl.truststore.location>-->
<!--                        <schema.registry.ssl.truststore.password>mystorepassword</schema.registry.ssl.truststore.password>-->
                    </configs>
                </configuration>
            </plugin>



            <plugin>
                <groupId>com.google.cloud.tools</groupId>
                <artifactId>jib-maven-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>io.github.zlika</groupId>
                <artifactId>reproducible-build-maven-plugin</artifactId>
                <version>0.11</version>
                <executions>
                    <execution>
                        <id>run-when-packaged</id>
                        <goals>
                            <goal>strip-jar</goal>
                        </goals>
                        <phase>package</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>